<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"
                android:textSize="18sp"
                android:textColor="@android:color/black"
            />
            <TextView
                android:id="@+id/tv_status_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_status"
                android:textSize="18sp"
                android:text="待唤醒"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rl_status"
        android:visibility="gone">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="响应时间:"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_time"
                android:textSize="18sp"
                android:text=""/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rl_time">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="识别结果:"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_result_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_result"
                android:textSize="18sp"
                android:text=""/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nlu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rl_result">

            <TextView
                android:id="@+id/tv_nlu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语义理解:"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_nlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_nlu_title"
                android:textSize="18sp"
                android:text=""/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@+id/rl_result"
            android:onClick="onClickStop"
            android:visibility="gone"
        />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@+id/btn_start"
            android:onClick="onClickQuery"
            android:text="query"
            android:visibility="gone"
        />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_result"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_light"
        />

        <EditText
            android:id="@+id/et_tts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_start"
            android:visibility="gone"
            android:background="@android:color/holo_red_light"/>

        <TextView
            android:id="@+id/tv_wakeup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/rl_nlu"
            android:text="唤醒词：海尔优家"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>
        <View
            android:id="@+id/view_line"
            android:layout_below="@id/tv_wakeup"
            android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:gravity="center"
        android:layout_below="@id/view_line"
        android:text="您可以这样说"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            android:layout_below="@id/tv_show"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="22sp"/>
    </RelativeLayout>

</ScrollView>
